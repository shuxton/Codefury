        <div class="col-xl-8 offset-xl-2">
            <div class="heading">
                <h1 class="center">Accomodation Services</h1>
            </div>
            <br><br>
            <form action="/accomodate/<%=currentUser._id%>" method="POST">

                <div class="messages"></div>

                <div class="controls">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="name">PG/Hostel Name *</label>
                                <input id="name" type="text" name="name" class="form-control"
                                    placeholder="Please enter the name of your PG/Hostel *" required="required"
                                    data-error="Name is required.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="city"> City *</label>
                                <input id="city" type="text" name="city" class="form-control" placeholder="Location *"
                                    required="required" data-error="City is required *.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>

                    <br>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="price">Price Per Month *</label>
                                <input id="price" type="text" name="price" class="form-control"
                                    placeholder="Please enter the price per month(inclusive of two meals a day) *"
                                    required="required" data-error="Price is required.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="officialNumber">Official Contact Number *</label>
                                <input id="officialNumber" type="text" name="officialNumber" class="form-control"
                                    required="required" placeholder="Please enter your official contact number *">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>

