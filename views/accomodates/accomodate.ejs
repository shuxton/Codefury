            <form action="/register" method="POST">

                <div class="messages"></div>

                <div class="controls">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="Name">PG Name *</label>
                                <input id="Name" type="text" name="Name" class="form-control"
                                    placeholder="" required="required"
                                    data-error="Name is required.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="city"> City *</label>
                                <input id="city" type="text" name="city" class="form-control"
                                    placeholder="Please enter the city where the PG is located *" required="required"
                                    data-error="City is required *.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>

                    <br>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="price">Price Per Month *</label>
                                <input id="price" type="text" name="text" class="form-control"
                                    placeholder="Please enter the price per month(inclusive of two meals a day) *"
                                    required="required" data-error="Price is required.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="official">Official Contact Number *</label>
                                <input id="official" type="text" name="official" class="form-control"
                                    required="required" placeholder="">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>

